@model FinalB.Models.Studio
@{
    ViewBag.Title = "Movie Listings – "+ Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movie Listings – @Model.Name</h2>

<table class="table table-striped table-hover sortable ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.Movies)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Title, "~/Movies/Details", new { id = item.MovieID })
            </td>
            <td></td>
        </tr>
    }
</table>
